ng-template('#slides')
    section([id]="active?.href")
        slide-with-header([header]="(active != null) ? active.label : title")
            div.tf-tree(*ngIf=rootNode != null)
                ul
                    li(tables-of-content-node='', [remaining-depth]="(depth == null) ? null : depth - 1", [show-siblings]="showSiblingsOfActualActive", [depth-after-active]="depthAfterActive", [entry]="methodRootNode")
            ng-content